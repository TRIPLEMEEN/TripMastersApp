<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LocationActivity"
    android:background="@color/tripify_green">


    <TextView
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/back_button"
        android:fontFamily="@font/irish_grover"
        android:text="@string/user_location"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <Button
        android:id="@+id/get_location_details"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/black"
        android:text="@string/update_location" />

    <TextView
        android:id="@+id/lattitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/lattitude"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lattitude"
        android:layout_alignStart="@id/lattitude"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/longitude"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitude"
        android:layout_alignStart="@id/lattitude"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignStart="@id/lattitude"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/city"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:layout_alignStart="@id/lattitude"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/irish_grover"
        android:text="@string/country"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:background="@drawable/back_svgrepo_com"
        android:contentDescription="@string/empty_string"
        android:text="@string/empty_string" />
</RelativeLayout>
